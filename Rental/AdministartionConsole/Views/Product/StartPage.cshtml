@model IEnumerable<AdministartionConsole.Models.ViewModel.ProductViewModel>
@{
    ViewData["Title"] = "Product";
}

<style>
    table {
        border-collapse: collapse;
        width: 100%;
        border: 1px, solid black;
    }

    th {
        text-align: center;
        font-weight: bold;
        font-size: 20px; 
        border: 1px, solid black;
    }
    td {
        text-align: center;
        font-size: 16px;
        border: 1px, solid black;
    }

    tr:nth-child(even) {
        background-color: #D6EEEE;
    }

    input[type=submit] {
        background-color: Green;
        border: none;
        color: white;
        padding: 5px 28px;
        text-align: center;
        text-decoration: none;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }
</style>

<div>
    @using (@Html.BeginForm("StartPage", "Product", FormMethod.Get))
    {
        <p>
            <b>Find by name:</b> @Html.TextBox("searching")
            <input type="submit" value="Search" />
        </p>
    }
</div>
<h2>Current Product List:</h2>

<div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
        </tr>

        @foreach(var item in Model)
        {
            <tr style="background:@(item.Status == "Available" ? "LightGreen" : "LawnGreen");">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvailableAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
            </tr>
        }
    </table>
</div>
