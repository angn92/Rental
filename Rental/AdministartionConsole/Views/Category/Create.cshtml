@model AdministartionConsole.Models.Dto.CategoryDto

@{
    ViewData["Title"] = "Create";
}

<style>
    input[type=submit] {
        background-color: green;
        border: none;
        color: white;
        padding: 10px 18px;
        cursor: pointer;
    }
    p{
        text-align: left;
        font-size: 30px;
    }
</style>

<div>
    <h2>Create new category</h2>
</div>
<br />

@using(Html.BeginForm("Create", "Category", FormMethod.Post)){
    <p>Enter category name:</p> @Html.TextBoxFor(x => x.Name)
    <br />
    <br />

    <input type="submit" value="Add category" />
}

<div>
    <br />@Html.ActionLink("Back to list", "Index", "Category")
</div>